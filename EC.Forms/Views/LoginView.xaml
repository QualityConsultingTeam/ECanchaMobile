<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EC.Forms.Views.LoginView"
             xmlns:local="clr-namespace:EC.Forms.Views;assembly=EC.Forms" Title="LOGIN" 
             BackgroundImage="bggrass.jpg"
            
              >
  

  <ScrollView >
   <StackLayout   HorizontalOptions="Center" VerticalOptions="Center" Padding="1">

      
        
       <Image  Source="loginIcon.png"  Aspect="AspectFit "  />

         
 
        <local:CustonEmtry Placeholder="Email" Text="{Binding Email}" PlaceholderColor="White" Keyboard="Email"  TextColor="White"/>

        <local:CustonEmtry Placeholder="Password" Text="{Binding Password}"  PlaceholderColor="White"  TextColor="White"  />

     
  
        <Button  TextColor="White" Text="Login" BorderColor="White" Command="{Binding LoginCommand}"   HorizontalOptions="Center" />

       

   </StackLayout>
 
  </ScrollView>

</ContentPage>