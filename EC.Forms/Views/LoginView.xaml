<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EC.Forms.Views.LoginView"
              xmlns:local="clr-namespace:EC.Forms.Views;assembly=EC.Forms" BackgroundImage="bg-grass.jpg">
  <ContentPage.Resources>
    <ResourceDictionary>
      <Style TargetType="Entry">
        <Setter Property="BackgroundColor" Value="White"/>
        <Setter Property="HeightRequest" Value="10"/>
        <Setter Property="TextColor" Value="Gray"/>
      </Style>
    </ResourceDictionary>
  </ContentPage.Resources>



  <ScrollView >
  <StackLayout Padding="20">

      
        
        <Image  Source="Logo.png"  Aspect="AspectFit " />
 
        <local:CustonEmtry Placeholder="Email" Text="{Binding Email}" />

        <local:CustonEmtry Placeholder="Password" Text="{Binding Password}" />


        <local:ButtonTextCentered  Text="GO!" x:Name="LoginButton" TextColor="White" BackgroundColor="#de1e24" Command="{Binding LoginCommand}"/>

      </StackLayout>


  </ScrollView>

</ContentPage>