<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EC.Forms.Views;assembly=EC.Forms"
             xmlns:Constant="clr-namespace:EC.Forms;assembly=EC.Forms"
             x:Class="EC.Forms.Views.FieldView">


    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="local:ButtonTextCentered">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="TextColor" Value="Gray"/>
                <Setter Property="Font" Value="Small"/>
                <Setter Property="BorderRadius" Value="0"/>
            </Style>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="Gray"/>
                <Setter Property="Font" Value="Medium"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>

        <Grid RowSpacing="0" ColumnSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackLayout BackgroundColor="{x:Static Constant:Constants.NavigationBarBackgroundColor}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HeightRequest="51" Padding="0,10,0,0" >
                <local:LabelRender Text="{x:Static Constant:TextConstant.FieldsTitle}" TextColor="{x:Static Constant:Constants.RedColorHex}" FontSize="20"
                     VerticalOptions="CenterAndExpand" HorizontalOptions="Center" />
                <StackLayout BackgroundColor="{x:Static Constant:Constants.BorderColor}" HeightRequest="1"/>
            </StackLayout>

            <local:ButtonTextCentered 
              Text="{x:Static Constant:TextConstant.FieldsViewTitle}"
              BackgroundColor="{Binding Tab1BackgroundColor}" TextColor="{Binding Tab1TextColor}"
              Command="{Binding Tab1Command}" Grid.Column="0" Grid.Row="1" />
            
            <local:ButtonTextCentered 
               Text="{x:Static Constant:TextConstant.CentersViewTitle}"
               BackgroundColor="{Binding Tab2BackgroundColor}" TextColor="{Binding Tab2TextColor}"
              Command="{Binding Tab2Command}" Grid.Column="1" Grid.Row="1" />

            <StackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" BackgroundColor="{x:Static Constant:Constants.BorderColor}"/>

            <ListView x:Name="ListView" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2"
                BackgroundColor="White" HasUnevenRows="True" IsVisible="{Binding IsTab1Selected}"
                ItemsSource="{Binding FieldsCollection}"   >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <local:MyViewCell>
                            <local:MyViewCell.View>
                                <StackLayout Orientation="Vertical" Padding="10" BackgroundColor="White">

                                    <Grid ColumnSpacing="-5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"></RowDefinition>
                                            <RowDefinition Height="*"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="*"></RowDefinition>
                                        </Grid.RowDefinitions>

                                        <!--<Image Grid.Column="0"  Grid.Row="0" Grid.RowSpan="5" Source="{Binding TypeOfNews}">
                                            <Image.WidthRequest>
                                                <OnPlatform x:TypeArguments="x:Double"  iOS="80" Android="125" />
                                            </Image.WidthRequest>
                                        </Image>-->
                                        <local:LabelRender Grid.Column="0" Grid.row="0" Text="{Binding Name}" TextColor="Gray" />
                                        <local:LabelRender Grid.Column="1" Grid.Row="2" Text="{Binding Lawn}" TextColor="Gray"/>

                                        <local:LabelRender Grid.Column="1" Grid.Row="3" Text="{Binding Title}" TextColor="{x:Static Constant:Constants.RedColorHex}" FontSize="18"/>

                                    </Grid>

                                    <Image Source="{Binding NewsImage}"/>

                                    <StackLayout Padding="20">
                                        <local:LabelRender VerticalOptions="Center" HorizontalOptions="Center" Text="{Binding Detail}" TextColor="Gray"/>
                                    </StackLayout>
                                </StackLayout>
                            </local:MyViewCell.View>
                        </local:MyViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--<ListView x:Name="ListView" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2"
                BackgroundColor="White" HasUnevenRows="True" IsVisible="{Binding IsTab1Selected}"
                IsPullToRefreshEnabled="True" IsRefreshing="{Binding IsBusy, Mode=OneWay}" 
                RefreshCommand="{Binding GetLatestNewsCommand}"
                ItemsSource="{Binding All}" SeparatorColor="Gray">
                
            </ListView>-->

            <!--<CustomControls:CustomWebView Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2"
               IsVisible="{Binding IsTab2Selected}" HeightRequest="400" PdfPath="{Binding PdfPath}" x:Name="ECWebView"/>-->

            <!--<local:NavigationBarView Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2"
                                       DocumentsCommand="{Binding DocumentsCommand}" InfoCommand="{Binding InfoCommand}" WorkshopsCommand="{Binding WorkshopsCommand}"
                                       MapCommand="{Binding MapCommand}" CityGuideCommand="{Binding CityGuideCommand}"
                                       InfoImage="{Binding InfoImage}" WorkshopsImage="{Binding WorkshopsImage}" DocumentsImage="{Binding DocumentsImage}"
                                       MapImage="{Binding MapImage}" CityGuideImage="{Binding CityGuideImage}"/>-->

        </Grid>

        <Grid  Grid.Row="0" BackgroundColor="Black" Opacity="0.5" IsVisible="{Binding IsBusyIOS}"/>

        <Grid  Grid.Row="0" IsVisible="{Binding IsBusyIOS}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <local:AlertView Grid.Column="1" Grid.Row="1" />

        </Grid>

    </Grid>

</ContentPage>